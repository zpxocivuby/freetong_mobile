<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_layout" >

    <RelativeLayout style="@style/app_top_rela_bg" >

        <Button
            android:id="@+id/btn_pmd_back"
            style="@style/app_top_btn_back" />

        <TextView
            style="@style/app_top_tv_title"
            android:text="@string/str_pmd_top_title" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp" >

            <itaf.mobile.app.ui.widget.AsyncImageView
                android:id="@+id/aiv_pmd_product_ico"
                style="@style/aiv_96" />

            <LinearLayout style="@style/linear_left_right" >

                <TextView
                    style="@style/tv_left"
                    android:text="商品名称" />

                <TextView
                    android:id="@+id/tv_pmd_product_name"
                    style="@style/tv_right" />
            </LinearLayout>

            <LinearLayout style="@style/linear_left_right" >

                <TextView
                    style="@style/tv_left"
                    android:text="商品类型" />

                <TextView
                    android:id="@+id/tv_pmd_category"
                    style="@style/tv_right" />
            </LinearLayout>

            <LinearLayout style="@style/linear_left_right" >

                <TextView
                    style="@style/tv_left"
                    android:text="@string/str_pmd_price" />

                <TextView
                    android:id="@+id/tv_pmd_price"
                    style="@style/tv_right" />
            </LinearLayout>

            <LinearLayout style="@style/linear_left_right" >

                <TextView
                    style="@style/tv_left"
                    android:text="@string/str_pmd_stock_num" />

                <TextView
                    android:id="@+id/tv_pmd_stock_num"
                    style="@style/tv_right" />
            </LinearLayout>

            <LinearLayout style="@style/linear_left_right" >

                <TextView
                    style="@style/tv_left"
                    android:text="上架数量" />

                <TextView
                    android:id="@+id/tv_pmd_shelf_num"
                    style="@style/tv_right"
                    android:text="10" />
            </LinearLayout>

            <LinearLayout style="@style/linear_left_right" >

                <TextView
                    style="@style/tv_left"
                    android:text="商品描述" />

                <TextView
                    android:id="@+id/tv_pmd_product_desc"
                    style="@style/tv_right" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>