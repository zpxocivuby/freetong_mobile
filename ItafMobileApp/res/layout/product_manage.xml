<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_layout" >

    <RelativeLayout style="@style/app_top_rela_bg" >

        <Button
            android:id="@+id/btn_pm_back"
            style="@style/app_top_btn_back" />

        <TextView
            style="@style/app_top_tv_title"
            android:text="@string/str_pm_top_title" />

        <Button
            android:id="@+id/btn_pm_add"
            style="@style/app_top_btn_right"
            android:text="@string/str_common_add" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_tr_white"
        android:padding="8dp" >

        <TextView
            android:id="@+id/tv_pm_product_category"
            style="@style/tv_category"
            android:text="@string/str_common_product_category" />

        <Button
            android:id="@+id/btn_pm_on_sale"
            style="@style/btn_tab_left"
            android:layout_toLeftOf="@+id/btn_pm_off_sale"
            android:text="上架" />

        <Button
            android:id="@+id/btn_pm_off_sale"
            style="@style/btn_tab_right"
            android:layout_alignParentRight="true"
            android:text="下架" />
    </RelativeLayout>

    <itaf.mobile.app.third.pull.PullToRefreshListView
        android:id="@+id/plv_pm_content"
        style="@style/lv_common" />

</LinearLayout>