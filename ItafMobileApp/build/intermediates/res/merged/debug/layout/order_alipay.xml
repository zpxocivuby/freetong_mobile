<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_layout" >

    <RelativeLayout style="@style/app_top_rela_bg" >

        <Button
            android:id="@+id/btn_op_back"
            style="@style/app_top_btn_back" />

        <TextView
            style="@style/app_top_tv_title"
            android:text="订单支付" />

        <Button
            android:id="@+id/btn_op_order_pay"
            style="@style/app_top_btn_right"
            android:text="@string/str_common_save" />
    </RelativeLayout>

    <LinearLayout
        style="@style/linear_padding8"
        android:padding="0dp" >

        <TextView
            style="@style/tv_tab_title"
            android:text="订单信息" />

        <LinearLayout style="@style/linear_left_right" >

            <TextView
                style="@style/tv_left"
                android:text="订单号" />

            <TextView
                android:id="@+id/tv_op_order_no"
                style="@style/tv_right" />
        </LinearLayout>

        <LinearLayout style="@style/linear_left_right" >

            <TextView
                style="@style/tv_left"
                android:text="支付金额" />

            <TextView
                android:id="@+id/tv_op_pay_amount"
                style="@style/tv_right" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/linear_padding8"
        android:padding="0dp" >

        <TextView
            style="@style/tv_tab_title"
            android:text="支付宝账号" />

        <EditText
            android:id="@+id/et_op_alipay_username"
            style="@style/et_bg_input" />
    </LinearLayout>

</LinearLayout>