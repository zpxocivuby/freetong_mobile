<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_layout" >

    <RelativeLayout style="@style/app_top_rela_bg" >

        <Button
            android:id="@+id/btn_uae_back"
            style="@style/app_top_btn_back" />

        <TextView
            style="@style/app_top_tv_title"
            android:text="@string/str_uae_top_title" />

        <Button
            android:id="@+id/btn_uae_save"
            style="@style/app_top_btn_right"
            android:text="@string/str_common_confirm" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linear_uae_layout"
        style="@style/linear_padding8" >

        <LinearLayout style="@style/linear_left_right" >

            <TextView
                style="@style/tv_left"
                android:text="@string/str_uae_contact_person" />

            <EditText
                android:id="@+id/et_uae_contact_person"
                style="@style/et_bg_input"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout style="@style/linear_left_right" >

            <TextView
                style="@style/tv_left"
                android:text="@string/str_uae_contact_no" />

            <EditText
                android:id="@+id/et_uae_contact_no"
                style="@style/et_bg_input"
                android:inputType="number" />
        </LinearLayout>

        <LinearLayout style="@style/linear_left_right" >

            <TextView
                style="@style/tv_left"
                android:text="@string/str_uae_address" />

            <EditText
                android:id="@+id/et_uae_address"
                style="@style/et_bg_textarea"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout style="@style/linear_left_right" >

            <TextView
                style="@style/tv_left"
                android:text="@string/str_uae_postcode" />

            <EditText
                android:id="@+id/et_uae_postcode"
                style="@style/et_bg_input"
                android:inputType="number" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>