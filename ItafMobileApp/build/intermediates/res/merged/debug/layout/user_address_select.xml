<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_layout" >

    <RelativeLayout style="@style/app_top_rela_bg" >

        <Button
            android:id="@+id/btn_uas_back"
            style="@style/app_top_btn_back" />

        <TextView
            style="@style/app_top_tv_title"
            android:text="选择发货地址" />

        <Button
            android:id="@+id/btn_uas_confirm"
            style="@style/app_top_btn_right"
            android:text="@string/str_common_confirm" />

        <Button
            android:id="@+id/btn_uas_add"
            style="@style/app_top_btn_right"
            android:text="@string/str_common_add"
            android:visibility="gone" />
    </RelativeLayout>

    <itaf.mobile.app.third.pull.PullToRefreshListView
        android:id="@+id/plv_uas_content"
        style="@style/lv_common" />

</LinearLayout>