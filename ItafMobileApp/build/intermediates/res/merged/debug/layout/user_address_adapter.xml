<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_adapter_layout" >

    <LinearLayout style="@style/linear_left_right" >

        <TextView
            style="@style/tv_left"
            android:text="@string/str_uaa_contact_person" />

        <TextView
            android:id="@+id/tv_uaa_contact_person"
            style="@style/tv_match" />
    </LinearLayout>

    <LinearLayout style="@style/linear_left_right" >

        <TextView
            style="@style/tv_left"
            android:text="@string/str_uaa_contact_no" />

        <TextView
            android:id="@+id/tv_uaa_contact_no"
            style="@style/tv_match" />
    </LinearLayout>

    <LinearLayout style="@style/linear_left_right" >

        <TextView
            style="@style/tv_left"
            android:text="@string/str_uaa_address" />

        <TextView
            android:id="@+id/tv_uaa_address"
            style="@style/tv_match" />
    </LinearLayout>

    <LinearLayout style="@style/linear_left_right" >

        <TextView
            style="@style/tv_left"
            android:text="@string/str_uaa_postcode" />

        <TextView
            android:id="@+id/tv_uaa_postcode"
            style="@style/tv_match" />
    </LinearLayout>

</LinearLayout>