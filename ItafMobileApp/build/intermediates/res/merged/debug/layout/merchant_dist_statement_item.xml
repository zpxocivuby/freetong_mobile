<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/linear_layout" >

    <RelativeLayout style="@style/app_top_rela_bg" >

        <Button
            android:id="@+id/btn_mdsi_back"
            style="@style/app_top_btn_back" />

        <TextView
            style="@style/app_top_tv_title"
            android:text="配送结算" />

        <Button
            android:id="@+id/btn_mdsi_statement"
            style="@style/app_top_btn_right"
            android:text="结算" />
    </RelativeLayout>

    <RelativeLayout style="@style/rela_toobar" >

        <EditText
            android:id="@+id/et_mdsi_searchkey"
            style="@style/et_bg_search_input"
            android:layout_centerInParent="true" />

        <Button
            android:id="@+id/btn_mdsi_search"
            android:layout_width="31dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:background="@null" />
    </RelativeLayout>

    <itaf.mobile.app.third.pull.PullToRefreshListView
        android:id="@+id/plv_mdsi_content"
        style="@style/elv_common" />

</LinearLayout>